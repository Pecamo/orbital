{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
  },
  "exclude": [
    "public",
    "client",
    "dist"
  ]
}
